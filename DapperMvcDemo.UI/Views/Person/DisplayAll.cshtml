@model IEnumerable<DapperMvcDemo.Data.Models.Domain.Person>

<!-- DataTables CSS -->
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />

<h3>People List</h3>

<input type="text" id="customSearch" placeholder="Search anything..." class="form-control mb-3" />

<div class="my-2">
    <a href="/Person/Add" class="btn btn-info my-2">Add More</a>
</div>

<table id="personTable" class="display table table-striped" style="width:100%">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Address</th>
            <th>Department</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var person in Model)
        {
            <tr>
                <td>@person.Name</td>
                <td>@person.Email</td>
                <td>@person.Address</td>
                <td>@person.DeptName</td>
                <td>
                    <a href="/Person/Edit?id=@person.Id" class="btn btn-success">Edit</a>
                    <a href="/Person/Delete?id=@person.Id" onclick="return window.confirm('Are you sure you want to delete this data?')" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Move this script to the bottom of the page just before </body> -->

<script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
<script>
    console.log("jQuery version:", $.fn.jquery); // Should show 3.7.0
</script>
@section Scripts {
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>

    <script>
        $(function () {
            console.log("jQuery + DataTable ready");

            var table = $('#personTable').DataTable({
                paging: true,
                searching: true,
                info: false
            });

            $('#customSearch').on('keyup', function () {
                console.log("Searching:", this.value);
                table.search(this.value).draw();
            });
        });
    </script>
}
