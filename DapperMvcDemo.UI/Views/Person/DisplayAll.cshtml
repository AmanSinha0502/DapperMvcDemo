@model IEnumerable<DapperMvcDemo.Data.Models.Domain.Person>

<!-- DataTables CSS -->
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />
<link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.4.1/css/buttons.dataTables.min.css" />

<h3>People List</h3>

<input type="text" id="customSearch" placeholder="Search anything..." class="form-control mb-3" />

<div class="my-2">
    <a href="/Person/Add" class="btn btn-info my-2">Add More</a>
</div>

<table id="personTable" class="display table table-striped" style="width:100%">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Address</th>
            <th>Department</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var person in Model)
        {
            <tr>
                <td>@person.Name</td>
                <td>@person.Email</td>
                <td>@person.Address</td>
                <td>@person.DeptName</td>
                <td>
                    <a href="/Person/Edit?id=@person.Id" class="btn btn-success">Edit</a>
                    <a href="/Person/Delete?id=@person.Id" onclick="return window.confirm('Are you sure you want to delete this data?')" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- jQuery -->
@section Scripts {
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>

    <!-- DataTables Core -->
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>

    <!-- JSZip for Excel Export -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>

    <!-- PDFMake for PDF Export -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.36/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.36/vfs_fonts.js"></script>

    <!-- DataTables Buttons -->
    <script src="https://cdn.datatables.net/buttons/2.4.1/js/dataTables.buttons.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.1/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.1/js/buttons.print.min.js"></script>

    <script>
        $(function () {
            var table = $('#personTable').DataTable({
                paging: true,
                searching: true,
                info: false,
                dom: 'Bfrtip',
                buttons: [
                    {
                        extend: 'copyHtml5',
                        title: 'People List',
                        messageTop: 'Exported data from People Directory'
                    },
                    {
                        extend: 'excelHtml5',
                        title: 'People List',
                        messageTop: 'Exported data from People Directory'
                    },
                    {
                        extend: 'pdfHtml5',
                        title: 'People List',
                        messageTop: 'Exported data from People Directory'
                    },
                    {
                        extend: 'print',
                        title: 'People List',
                        messageTop: 'Exported data from People Directory'
                    }
                ]
            });

            $('#customSearch').on('keyup', function () {
                table.search(this.value).draw();
            });
        });
    </script>
}
